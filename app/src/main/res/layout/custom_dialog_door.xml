<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/dialog_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/green_border"
    android:padding="15dp"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/add_door"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add door"
            android:textColor="#aec865"
            android:fontFamily="@font/bodoniflf_bold"
            android:textSize="25dp"
            >
        </TextView>

        <LinearLayout
            android:id="@+id/insert_door_id"
            android:layout_below="@+id/add_door"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <TextView
                android:id="@+id/door_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bodoniflf_bold"
                android:text="Door id"
                android:textColor="#aec865"
                android:textSize="25dp"></TextView>

            <EditText
                android:id="@+id/search_door_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:theme="@style/EditDoorStyle"
                android:textCursorDrawable="@null"
                android:textColor="#aec865"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_below="@+id/insert_door_id"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/add_door_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="#aec865"
                android:fontFamily="@font/bodoniflf_bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:background="#77000000"
                android:layout_marginTop="10dp"
                />

            <Button
                android:id="@+id/close_btn"
                android:layout_below="@+id/host_guest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:textColor="#aec865"
                android:fontFamily="@font/bodoniflf_bold"
                android:textSize="20dp"
                android:padding="10dp"
                android:background="#77000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="30dp"
                />

        </LinearLayout>

    </RelativeLayout>

    </ScrollView>


</RelativeLayout>