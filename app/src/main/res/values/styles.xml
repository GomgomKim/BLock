<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/redish</item>
        <item name="colorControlActivated">@color/redish</item>
        <item name="android:textCursorDrawable">@color/redish</item>
        <item name="android:textColor">@color/redish</item>
        <item name="android:textColorHint">@color/redish</item>
    </style>

    <style name="LoginStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textCursorDrawable">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="EditDoorStyle" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
        <item name="android:textCursorDrawable">@color/green</item>
        <item name="android:textColor">@color/green</item>
        <item name="android:textColorHint">@color/green</item>
    </style>

</resources>
